<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/city_manger_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="城市管理"
        app:titleTextColor="#fff">

    </android.support.v7.widget.Toolbar>

    <com.example.cyc.weatherinf.view.CityMangerRecylcerView
        android:id="@+id/city_manger_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.cyc.weatherinf.view.CityMangerRecylcerView>

</LinearLayout>